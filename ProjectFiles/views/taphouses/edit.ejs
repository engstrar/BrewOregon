<% layout("layouts/boilerplate")%>
    <% for (const tapHouse of results) {%>
        <div class="container">
            <div class="card">
                <form id="editTapHouse" action="/updateTapHouse">
                    <div class="card-body">
                        <h5 class="card-title">Updating Tap House</h5>
                        <br>
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" id="tapHouseID" name="tapHouseID"
                                    value="<%=tapHouse.tapHouseID%>" readonly>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" id="tapHouseName" name="tapHouseName"
                                    value="<%=tapHouse.tapHouseName%>" required>
                            </div>
