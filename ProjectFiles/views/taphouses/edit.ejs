                                <%} %>>
                                    <label class="form-check-label" for="serveFoodYes">Yes</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="serveFood" id="serveFoodNo" value="0"
                                    <% if (tapHouse.serveFood==0) {%> checked
                                <%} %>>
                                    <label class="form-check-label" for="serveFoodNo">No</label>
                            </div>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-warning">Update</button>
                        <a href="/deleteTapHouse?ID=<%= tapHouse.tapHouseID%>" class="btn btn-danger">Delete</a>
                    </div>
                </form>

            </div>
        </div>
