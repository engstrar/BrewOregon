                                <select name="breweryID" id="breweryID" class="form-select" placeholder="Brewery">
                                    <option selected disabled>Select a Brewery</option>
                                    <% for (const brewery of breweries) {%>
                                        <option value=<%=brewery.breweryID%>
                                            <% if (brewery.breweryID==tapHouse.breweryID) {%> selected
                                                <%} %>>
                                                    <%= brewery.breweryName%>
                                        </option>
                                        <%}%>
                                            <option value="NULL">Not Owned by a Brewery</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                            </div>
                            <div class="col">
                                <p class="text-end"><small>Don't See the Brewery? <a href="/breweries">Add it
                                            Here</a></small>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" id="tapAddr1" name="tapAddr1"
                                    value="<%=tapHouse.tapAddr1%>" required>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col">
                                <select name="cityID" id="cityID" class="form-select">
                                    <option selected disabled>Select a City</option>
                                    <% for (const city of cities) {%>
                                        <option value=<%=city.cityID%>
                                            <% if (city.cityID==tapHouse.cityID) {%> selected
                                                <%} %>>
                                                    <%= city.cityName%>
                                        </option>
                                        <%}%>
                                </select>
                            </div>
                            <div class="col">
                                <select name="tapState" id="tapState" class="form-select">
