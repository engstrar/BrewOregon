<% layout("layouts/boilerplate")%>

    <div class="container">
        <h1 class="display-6 text-center">ALL TAP HOUSES</h1>
        <h6 class="text-center">
            <small class="text-muted">This page will be used to display all of the tap houses, add new tap houses, and
                edit existing tap houses.</small>
        </h6>

        <!-- Bootstrap Card for Displaying a Brewery Set Up as a Form to Add a new Brewery-->
        <div class="card">
            <form id="addTapHouse" action="/addTapHouse">
                <div class="card-body">
                    <h5 class="card-title">Add a New Tap House</h5>
                    <br>
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" id="tapHouseName" placeholder="Tap House Name"
                                name="tapHouseName" required>
                        </div>
                        <div class="col">
                            <select name="breweryID" id="breweryID" class="form-select" placeholder="Brewery" required>
                                <option value="" hidden>Select a Brewery</option>
                                <% for (const brewery of breweries) {%>
                                    <option value=<%=brewery.breweryID%>>
                                        <%= brewery.breweryName%>
                                    </option>
                                    <%}%>
                                        <option value="NULL">Not Owned by a Brewery</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                        </div>
                        <div class="col">
                            <p class="text-end"><small>Don't See the Brewery? <a href="/breweries">Add it
                                        Here</a></small>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Street Address" id="tapAddr1"
                                name="tapAddr1" required>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col">
                            <select name="cityID" id="cityID" class="form-select" required>
                                <option value="" hidden>Select a City</option>
                                <% for (const city of cities) {%>
                                    <option value=<%=city.cityID%>>
                                        <%= city.cityName%>
                                    </option>
                                    <%}%>
                            </select>
                        </div>
                        <div class="col">
                            <select name="tapState" id="tapState" class="form-select" required>
                                <option value="" hidden>Select a State</option>
